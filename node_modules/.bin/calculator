#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/use/bin/env" ]; then
  exec "$basedir/use/bin/env" node "$basedir/../my-simple-cli-calculator/Calculator.js" "$@"
else 
  exec use/bin/env node "$basedir/../my-simple-cli-calculator/Calculator.js" "$@"
fi
